% Página limpia
\newcommand{\emptypage}{\thispagestyle{empty}\cleardoublepage}

% Portada del capítulo simple
\newcommand{\capitulo}[3]{
	\chapter{#1}
	\label{cap:#2}
	\vspace{11cm}
	\noindent \rule{15cm}{1pt}\\
	\paragraph{#3}
	\newpage
}

% Requisito de capacidad
\newcommand{\reqcapacidad}[5]{
	\begin{table}[H]
	\begin{center}
		\stepcounter{rcap}
	\begin{tabular}{|| m{3.5cm} | m{3.5cm} | m{3.5cm} | @{\extracolsep{\fill}} c ||}
		
		\hline
		\hline
		\multicolumn{4}{|| c ||}{\textbf{#1}}\\
		\hline
		\textsc{Identificador} & RUC-\arabic{rcap} &
		\textsc{Prioridad} & #3 \\
		\hline
		\textsc{Fuente} & #2 &
		\textsc{Necesidad} & #4 \\
		\hline
		\multicolumn{4}{|| c ||}{\textsc{Descripción}}\\
		\hline
		\multicolumn{4}{|| p{14cm} ||}{#5}\\
		\hline
		\hline
		
	\end{tabular}
	\end{center}
	\end{table}
}

